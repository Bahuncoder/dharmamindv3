# DharmaMind Enterprise Authentication - Production Environment Variables
# Copy this file to .env and customize for your deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dharmamind
DB_USER=postgres
DB_PASSWORD=secure_database_password_change_me_in_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_me_in_production

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# Generate strong random keys for production
SECRET_KEY=super_secret_application_key_change_me_minimum_32_chars
JWT_SECRET=jwt_signing_secret_key_change_me_minimum_32_characters

# Environment settings
ENVIRONMENT=production
DEBUG=false
NODE_ENV=production

# =============================================================================
# DOMAIN AND CORS CONFIGURATION
# =============================================================================
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_or_app_password
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# SECURITY AND RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT_HOURS=24
REMEMBER_ME_DAYS=30

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
GRAFANA_PASSWORD=secure_grafana_admin_password

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# OpenAI GPT Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Google Gemini Configuration  
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# S3 or compatible storage for backups
BACKUP_S3_BUCKET=dharmamind-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_REGION=us-east-1

# =============================================================================
# DEVELOPMENT OVERRIDES (for development environment)
# =============================================================================
# Uncomment and modify these for development
# ENVIRONMENT=development
# DEBUG=true
# DB_HOST=localhost
# REDIS_HOST=localhost
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ORIGINS=http://localhost:3000,http://localhost:3006
# NEXT_PUBLIC_API_URL=http://localhost:8000
