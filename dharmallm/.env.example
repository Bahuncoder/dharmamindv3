# DharmaMind Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DATABASE_URL=sqlite:///./data/dharma.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dharmamind
# For MySQL: mysql://user:password@localhost:3306/dharmamind

# JWT Configuration (MUST be at least 32 characters)
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-MIN-32-CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
SESSION_TIMEOUT_SECONDS=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=Authorization,Content-Type

# API Keys (if needed)
# EXTERNAL_API_KEY=your-api-key-here

# Redis (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/dharmamind.log

# Application
APP_NAME=DharmaMind
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production
