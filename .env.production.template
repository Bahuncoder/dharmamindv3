# üîß Environment Configuration Template
# Copy this to .env and fill in your values

# ================================
# üåü CORE APPLICATION CONFIG
# ================================
ENVIRONMENT=production
DEBUG=false
DOMAIN=dharmamind.ai
ACME_EMAIL=admin@dharmamind.ai

# ================================
# üîê SECURITY SECRETS
# ================================
JWT_SECRET=your_super_secure_jwt_secret_change_me_256_bits_minimum
DB_PASSWORD=ultra_secure_database_password_change_me
REDIS_PASSWORD=secure_redis_password_change_me
GRAFANA_PASSWORD=secure_grafana_admin_password

# ================================
# ü§ñ AI API KEYS
# ================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-ai-api-key-here

# ================================
# üîë OAUTH CONFIGURATION
# ================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================
# üìß EMAIL CONFIGURATION
# ================================
SMTP_USER=notifications@dharmamind.ai
SMTP_PASSWORD=your-email-app-password
FROM_EMAIL=noreply@dharmamind.ai

# ================================
# üìä MONITORING & OBSERVABILITY
# ================================
PROMETHEUS_RETENTION=30d
GRAFANA_ADMIN_PASSWORD=secure_monitoring_password

# ================================
# üöÄ PERFORMANCE TUNING
# ================================
# Application Workers
WORKERS=4
MAX_CONNECTIONS=1000
WORKER_MEMORY_LIMIT=512m

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_MAX_CONNECTIONS=100
REDIS_MEMORY_LIMIT=1gb

# ================================
# üîí SSL/HTTPS CONFIGURATION
# ================================
SSL_CERT_PATH=/etc/ssl/certs/dharmamind.crt
SSL_KEY_PATH=/etc/ssl/private/dharmamind.key
SSL_CHAIN_PATH=/etc/ssl/certs/dharmamind-chain.crt

# ================================
# üåê CORS & SECURITY HEADERS
# ================================
ALLOWED_HOSTS=dharmamind.ai,www.dharmamind.ai,api.dharmamind.ai
CORS_ORIGINS=https://dharmamind.ai,https://www.dharmamind.ai

# ================================
# üìà SCALING CONFIGURATION
# ================================
# Auto-scaling limits
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Load balancer
LOAD_BALANCER_TYPE=application
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# ================================
# üíæ BACKUP CONFIGURATION
# ================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=dharmamind-backups
S3_BACKUP_REGION=us-east-1

# ================================
# üéØ FEATURE FLAGS
# ================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# ================================
# üîÑ CI/CD CONFIGURATION
# ================================
DEPLOY_KEY=your-deployment-ssh-key
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
NOTIFICATION_EMAIL=devops@dharmamind.ai

# ================================
# üìù LOGGING CONFIGURATION
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true
